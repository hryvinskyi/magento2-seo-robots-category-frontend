<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Register meta robots provider -->
    <type name="Hryvinskyi\SeoRobotsFrontend\Model\ApplyRobots">
        <arguments>
            <argument name="robotsProviders" xsi:type="array">
                <item name="category_robots" xsi:type="object">Hryvinskyi\SeoRobotsCategoryFrontend\Model\CategoryRobotsProvider</item>
            </argument>
        </arguments>
    </type>

    <!-- Register X-Robots-Tag provider -->
    <type name="Hryvinskyi\SeoRobotsFrontend\Model\GetXRobotsByRequest">
        <arguments>
            <argument name="xrobotsProviders" xsi:type="array">
                <item name="category_xrobots" xsi:type="object">Hryvinskyi\SeoRobotsCategoryFrontend\Model\CategoryXRobotsProvider</item>
            </argument>
        </arguments>
    </type>
</config>
